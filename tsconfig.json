{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "skipLibCheck": true,
    "types": ["bun-types"],
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "tmp"]
}
